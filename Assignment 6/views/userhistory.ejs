<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= session.user.userName %> (<%= session.user.email %>) History</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="/css/main.css" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Falguni's Store</a>
        </div>
    </nav>

    <div class="container" style="padding-top: 90px;">
        <h2><%= session.user.userName %> (<%= session.user.email %>) History</h2>
        
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Login Date/Time</th>
                    <th>Client Information</th>
                </tr>
            </thead>
            <tbody>
                <% if (session.user.loginHistory && session.user.loginHistory.length > 0) { %>
                    <% session.user.loginHistory.forEach(function(login) { %>
                        <tr>
                            <td><%= login.dateTime %></td>
                            <td><%= login.userAgent %></td>
                        </tr>
                    <% }); %>
                <% } else { %>
                    <tr>
                        <td colspan="2" class="text-center">No login history available.</td>
                    </tr>
                <% } %>
            </tbody>
        </table>

        <div>
            <a href="/items" class="btn btn-primary">Back to Items</a>
            <a href="/logout" class="btn btn-secondary">Log Out</a>
        </div>
    </div>

    <footer class="text-center py-4">
        <p>&copy; <%= new Date().getFullYear() %> Falguni's Store.</p>
    </footer>
</body>
</html>
